{
    "name": "common-lisp",
    "displayName": "Common Lisp",
    "description": "Syntax highlighting for Common Lisp",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./src/extension.js",
    "activationEvents": [
        "onLanguage:common-lisp",
        "onDebug"
    ],
    "contributes": {
        "languages": [
            {
                "id": "common-lisp",
                "aliases": [
                    "Common Lisp",
                    "common-lisp"
                ],
                "extensions": [
                    ".lisp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "common-lisp",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "common-lisp.selectSexpr",
                "title": "Select S-Expression"
            },
            {
                "command": "common-lisp.sendToRepl",
                "title": "Send To REPL"
            }
        ],
        "keybindings": [
            {
                "command": "common-lisp.selectSexpr",
                "key": "alt+shift+up"
            },
            {
                "command": "common-lisp.sendToRepl",
                "key": "alt+shift+enter"
            }
        ],
        "configuration": {
            "title": "Common Lisp",
            "properties": {
                "common_lisp.format.indentWidth": {
                    "type": "number",
                    "default": 4,
                    "description": "Indentation Level"
                },
                "common_lisp.format.indentCloseParenStack": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, align closing parens stack with nearest parent"
                },
                "common_lisp.format.closeParenStacked": {
                    "type": "string",
                    "enum": [
                        "always",
                        "never"
                    ],
                    "default": "always",
                    "description": "When to stack all close parens together"
                }
            }
        },
        "colors": [
            {
                "id": "common_lisp.default",
                "description": "Common Lisp Default",
                "defaults": {
                    "light": "#d4d4d4ff",
                    "dark": "#d4d4d4ff",
                    "highContrast": "#d4d4d4ff"
                }
            },
            {
                "id": "common_lisp.keyword",
                "description": "Common Lisp Keyword",
                "defaults": {
                    "light": "#569cd6ff",
                    "dark": "#569cd6ff",
                    "highContrast": "#569cd6ff"
                }
            },
            {
                "id": "common_lisp.packages",
                "description": "Common Lisp Packages Keyword",
                "defaults": {
                    "light": "#569cd6ff",
                    "dark": "#569cd6ff",
                    "highContrast": "#569cd6ff"
                }
            },
            {
                "id": "common_lisp.control",
                "description": "Common Lisp Control Words",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.macro",
                "description": "Common Lisp Macro",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.special",
                "description": "Common Lisp Special Operators",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.function",
                "description": "Common Lisp Function",
                "defaults": {
                    "light": "#dcdcaaff",
                    "dark": "#dcdcaaff",
                    "highContrast": "#dcdcaaff"
                }
            },
            {
                "id": "common_lisp.string",
                "description": "Common Lisp String",
                "defaults": {
                    "light": "#ce9178ff",
                    "dark": "#ce9178ff",
                    "highContrast": "#ce9178ff"
                }
            },
            {
                "id": "common_lisp.quoted",
                "description": "Common Lisp Quoted Item",
                "defaults": {
                    "light": "#ce9178ff",
                    "dark": "#ce9178ff",
                    "highContrast": "#ce9178ff"
                }
            },
            {
                "id": "common_lisp.package",
                "description": "Common Lisp Package",
                "defaults": {
                    "light": "#4ec9b0ff",
                    "dark": "#4ec9b0ff",
                    "highContrast": "#4ec9b0ff"
                }
            },
            {
                "id": "common_lisp.symbol",
                "description": "Common Lisp Symbol",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.id",
                "description": "Common Lisp Identifier",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.parameter",
                "description": "Common Lisp Parameter",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.comment",
                "description": "Common Lisp Comment",
                "defaults": {
                    "light": "#6a9955ff",
                    "dark": "#6a9955ff",
                    "highContrast": "#6a9955ff"
                }
            },
            {
                "id": "common_lisp.error",
                "description": "Common Lisp Error",
                "defaults": {
                    "light": "#ff0000",
                    "dark": "#ff0000",
                    "highContrast": "#ff0000"
                }
            }
        ],
        "breakpoints": [
            {
                "language": "common-lisp"
            }
        ],
        "debuggers": [
            {
                "type": "common-lisp-repl",
                "label": "Common Lisp REPL",
                "program": "./src/debug/Adapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "common-lisp-repl",
                        "request": "launch",
                        "name": "Common Lisp REPL",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Common Lisp REPL: Launch",
                        "body": {
                            "type": "common-lisp-repl",
                            "request": "launch",
                            "name": "Common Lisp REPL",
                            "stopOnEntry": true
                        }
                    }
                ]
            }
        ]
    },
    "dependencies": {
        "vscode-debugadapter": "^1.40.0"
    }
}
