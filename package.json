{
    "name": "alive",
    "displayName": "Alive",
    "description": "Average Lisp VSCode Environment",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:common-lisp"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "build": "tsc -p ./tsconfig.build.json",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./tsconfig.build.json"
    },
    "contributes": {
        "languages": [
            {
                "id": "common-lisp",
                "aliases": [
                    "Common Lisp",
                    "common-lisp"
                ],
                "extensions": [
                    ".lisp",
                    ".cl",
                    ".asd",
                    ".asdf"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "common-lisp-repl",
                "aliases": [
                    "Common Lisp REPL",
                    "common-lisp-repl"
                ],
                "extensions": [
                    ".alive-repl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "common-lisp",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "alive.selectSexpr",
                "title": "Alive: Select S-Expression"
            },
            {
                "command": "alive.sendToRepl",
                "title": "Alive: Send To REPL"
            },
            {
                "command": "alive.compileFile",
                "title": "Alive: Compile File"
            },
            {
                "command": "alive.evalFile",
                "title": "Alive: Eval File"
            },
            {
                "command": "alive.attachRepl",
                "title": "Alive: Attach To REPL"
            },
            {
                "command": "alive.debugAbort",
                "title": "Alive: Debug Abort"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "alive.attachRepl",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.compileFile",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.sendToRepl",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl"
                },
                {
                    "command": "alive.selectSexpr",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl"
                },
                {
                    "command": "alive.debugAbort",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive"
                }
            ]
        },
        "keybindings": [
            {
                "command": "alive.compileFile",
                "when": "editorLangId == common-lisp",
                "key": "alt+shift+x"
            },
            {
                "command": "alive.evalFile",
                "when": "editorLangId == common-lisp",
                "key": "alt+shift+e"
            },
            {
                "command": "alive.selectSexpr",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl",
                "key": "alt+shift+up"
            },
            {
                "command": "alive.sendToRepl",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl",
                "key": "alt+shift+enter"
            },
            {
                "command": "alive.debugAbort",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+a"
            }
        ],
        "configuration": {
            "title": "Common Lisp",
            "properties": {
                "alive.format.indentWidth": {
                    "type": "number",
                    "default": 4,
                    "description": "Indentation Level"
                },
                "alive.format.indentCloseParenStack": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, align closing parens stack with nearest parent"
                },
                "alive.format.closeParenStacked": {
                    "type": "string",
                    "enum": [
                        "always",
                        "never"
                    ],
                    "default": "always",
                    "description": "When to stack all close parens together"
                },
                "alive.format.fixWhitespace": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, fix white space issues"
                },
                "alive.format.closeParenOwnLine": {
                    "type": "string",
                    "enum": [
                        "always",
                        "never",
                        "multiline"
                    ],
                    "default": true,
                    "description": "If true, fix white space issues"
                }
            }
        },
        "colors": [
            {
                "id": "common_lisp.default",
                "description": "Common Lisp Default",
                "defaults": {
                    "light": "#d4d4d4ff",
                    "dark": "#d4d4d4ff",
                    "highContrast": "#d4d4d4ff"
                }
            },
            {
                "id": "common_lisp.keyword",
                "description": "Common Lisp Keyword",
                "defaults": {
                    "light": "#569cd6ff",
                    "dark": "#569cd6ff",
                    "highContrast": "#569cd6ff"
                }
            },
            {
                "id": "common_lisp.packages",
                "description": "Common Lisp Packages Keyword",
                "defaults": {
                    "light": "#569cd6ff",
                    "dark": "#569cd6ff",
                    "highContrast": "#569cd6ff"
                }
            },
            {
                "id": "common_lisp.control",
                "description": "Common Lisp Control Words",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.macro",
                "description": "Common Lisp Macro",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.special",
                "description": "Common Lisp Special Operators",
                "defaults": {
                    "light": "#c586c0ff",
                    "dark": "#c586c0ff",
                    "highContrast": "#c586c0ff"
                }
            },
            {
                "id": "common_lisp.function",
                "description": "Common Lisp Function",
                "defaults": {
                    "light": "#dcdcaaff",
                    "dark": "#dcdcaaff",
                    "highContrast": "#dcdcaaff"
                }
            },
            {
                "id": "common_lisp.string",
                "description": "Common Lisp String",
                "defaults": {
                    "light": "#ce9178ff",
                    "dark": "#ce9178ff",
                    "highContrast": "#ce9178ff"
                }
            },
            {
                "id": "common_lisp.quoted",
                "description": "Common Lisp Quoted Item",
                "defaults": {
                    "light": "#ce9178ff",
                    "dark": "#ce9178ff",
                    "highContrast": "#ce9178ff"
                }
            },
            {
                "id": "common_lisp.package",
                "description": "Common Lisp Package",
                "defaults": {
                    "light": "#4ec9b0ff",
                    "dark": "#4ec9b0ff",
                    "highContrast": "#4ec9b0ff"
                }
            },
            {
                "id": "common_lisp.symbol",
                "description": "Common Lisp Symbol",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.id",
                "description": "Common Lisp Identifier",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.parameter",
                "description": "Common Lisp Parameter",
                "defaults": {
                    "light": "#9cdcfeff",
                    "dark": "#9cdcfeff",
                    "highContrast": "#9cdcfeff"
                }
            },
            {
                "id": "common_lisp.comment",
                "description": "Common Lisp Comment",
                "defaults": {
                    "light": "#6a9955ff",
                    "dark": "#6a9955ff",
                    "highContrast": "#6a9955ff"
                }
            },
            {
                "id": "common_lisp.error",
                "description": "Common Lisp Error",
                "defaults": {
                    "light": "#ff0000",
                    "dark": "#ff0000",
                    "highContrast": "#ff0000"
                }
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^14.14.2",
        "@types/vscode": "^1.50.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    }
}
