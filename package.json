{
    "name": "alive",
    "displayName": "Alive",
    "description": "Average Lisp VSCode Environment",
    "version": "0.0.6",
    "publisher": "rheller",
    "repository": {
        "url": "https://github.com/nobody-famous/alive"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/src/extension.js",
    "activationEvents": [
        "onLanguage:common-lisp",
        "onLanguage:common-lisp-repl"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "build": "tsc -p ./tsconfig.build.json",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./tsconfig.watch.json"
    },
    "contributes": {
        "languages": [
            {
                "id": "common-lisp",
                "aliases": [
                    "Common Lisp",
                    "common-lisp"
                ],
                "extensions": [
                    ".lisp",
                    ".cl",
                    ".asd",
                    ".asdf"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "common-lisp-repl",
                "aliases": [
                    "Common Lisp REPL",
                    "common-lisp-repl"
                ],
                "extensions": [
                    ".alive-repl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "semanticTokenTypes": [
            {
                "id": "error",
                "description": "An error token"
            },
            {
                "id": "symbol",
                "description": "A symbol token"
            },
            {
                "id": "parenthesis",
                "description": "An open or close parenthesis"
            }
        ],
        "snippets": [
            {
                "language": "common-lisp",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "alive.selectSexpr",
                "title": "Alive: Select S-Expression"
            },
            {
                "command": "alive.sendToRepl",
                "title": "Alive: Send To REPL"
            },
            {
                "command": "alive.inlineEval",
                "title": "Alive: Inline Eval"
            },
            {
                "command": "alive.clearInlineResults",
                "title": "Alive: Clear Inline Results"
            },
            {
                "command": "alive.compileFile",
                "title": "Alive: Compile File"
            },
            {
                "command": "alive.attachRepl",
                "title": "Alive: Attach To REPL"
            },
            {
                "command": "alive.detachRepl",
                "title": "Alive: Detach From REPL"
            },
            {
                "command": "alive.debugAbort",
                "title": "Alive: Debug Abort"
            },
            {
                "command": "alive.nthRestart",
                "title": "Alive: Nth Restart"
            },
            {
                "command": "alive.loadFile",
                "title": "Alive: Load File Into REPL"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "alive.attachRepl",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.detachRepl",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl"
                },
                {
                    "command": "alive.loadFile",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.sendToRepl",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl"
                },
                {
                    "command": "alive.inlineEval",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.clearInlineResults",
                    "when": "editorLangId == common-lisp"
                },
                {
                    "command": "alive.selectSexpr",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl"
                },
                {
                    "command": "alive.debugAbort",
                    "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive"
                }
            ]
        },
        "keybindings": [
            {
                "command": "alive.loadFile",
                "when": "editorLangId == common-lisp",
                "key": "alt+shift+l"
            },
            {
                "command": "alive.inlineEval",
                "when": "editorLangId == common-lisp",
                "key": "alt+shift+e"
            },
            {
                "command": "alive.selectSexpr",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl",
                "key": "alt+shift+up"
            },
            {
                "command": "alive.sendToRepl",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl",
                "key": "alt+shift+enter"
            },
            {
                "command": "alive.debugAbort",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+a"
            },
            {
                "command": "alive.nthRestart",
                "args": "0",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+0"
            },
            {
                "command": "alive.nthRestart",
                "args": "1",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+1"
            },
            {
                "command": "alive.nthRestart",
                "args": "2",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+2"
            },
            {
                "command": "alive.nthRestart",
                "args": "3",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+3"
            },
            {
                "command": "alive.nthRestart",
                "args": "4",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+4"
            },
            {
                "command": "alive.nthRestart",
                "args": "5",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+5"
            },
            {
                "command": "alive.nthRestart",
                "args": "6",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+6"
            },
            {
                "command": "alive.nthRestart",
                "args": "7",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+7"
            },
            {
                "command": "alive.nthRestart",
                "args": "8",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+8"
            },
            {
                "command": "alive.nthRestart",
                "args": "9",
                "when": "editorLangId == common-lisp || editorLangId == common-lisp-repl || clDebugViewActive",
                "key": "alt+ctrl+9"
            }
        ],
        "configuration": {
            "title": "Common Lisp",
            "properties": {
                "alive.format.indentWidth": {
                    "type": "number",
                    "default": 2,
                    "description": "Indentation Level"
                },
                "alive.format.closeParenOwnLine": {
                    "type": "string",
                    "enum": [
                        "always",
                        "never",
                        "multiline"
                    ],
                    "default": "never",
                    "description": "Specify when to put close parens on their own line"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^14.14.2",
        "@types/vscode": "^1.50.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    }
}
